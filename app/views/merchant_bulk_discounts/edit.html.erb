<h1>Edit Bulk Discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, value: @bulk_discount.name  %><br>
  <%= f.label :threshold  %><br>
  <%= f.text_field :threshold, value: @bulk_discount.threshold  %><br>
  <%= f.label :percent_discount %><br>
  <%= f.text_field :percent_discount, value: @bulk_discount.percent_discount %><br>
  <%= f.submit "Submit" %><br>
<% end %>